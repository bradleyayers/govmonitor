[MASTER]

ignore=manage.py,migrations

[MESSAGES CONTROL]

# C0111: Missing docstring
# R0903: Too few public method
# R0904: Too many public methods
# W0106: List comprehension assigned to nothing
# W0142: Used * or ** magic
# W0232: Class has no __init__ method
# W0401: Wildcard import
# W0614: Unused import from wildcard import
disable=C0111,R0903,R0904,W0106,W0142,W0232,W0401,W0614

[REPORTS]

include-ids=yes
reports=no

[BASIC]

bad-functions=apply,input

argument-rgx=[a-z_][a-z0-9_]*$
const-rgx=[a-zA-Z_][a-zA-Z0-9_]*$
function-rgx=[a-z_][a-z0-9_]{2,}$
method-rgx=[a-z_][a-z0-9_]{2,}$
variable-rgx=[a-z_][a-z0-9_]*$
